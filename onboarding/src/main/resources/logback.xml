<?xml version="1.0"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd/MM/yyyy HH:mm:ss} [%thread] %-5level %logger{30} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework.boot.web" level="warn" />
    <logger name="org.springframework.cloud" level="warn" />
    <logger name="com.netflix.config" level="warn" />
    <logger name="org.apache.catalina" level="warn" />

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
